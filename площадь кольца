#include <iostream>
#include <iomanip>
#include <math.h>
using namespace std;

int main() {
    double R, r, totalArea;

    cout << "Введите внешний радиус кольца: ";
    cin >> R;

    cout << "Введите внутренний радиус кольца: ";
    cin >> r;

    totalArea = M_PI * (R * R - r * r);

    cout << fixed << setprecision(2);
    cout << "Площадь кольца равна: " << totalArea << " единиц площади" << endl;

    return 0;
}
